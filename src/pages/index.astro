---
import Layout from "../layouts/Layout.astro";
import Header from "../sections/Header.astro";
import Services from "../sections/Services.astro";
import Values from "../sections/Values.astro";
import Content from "../sections/Content.astro";
import Testimonial from "../sections/Testimonial.astro";
import Contact from "../sections/Contact.astro";
import Banner from "../components/Banner.astro";
import "../style/global.css";
---

<Layout title="Light landingPage.">
  <main class="">
    <Header />
    <img
      class="absolute object-contain -top-[325px] left-[500px]"
      src="images/lights/circle.png"
      alt="bg-top"
    />
    <img
      class="absolute object-contain top-[350px] left-[200px]"
      src="images/lights/circle.png"
      alt="bg-left"
    />
    <img
      class="absolute object-contain top-[450px] right-[300px]"
      src="images/lights/circle.png"
      alt="bg-right"
    />
    <Content />
    <Banner />
    <Services />
    <Testimonial />
    <Values />
    <Contact />
  </main>
</Layout>
